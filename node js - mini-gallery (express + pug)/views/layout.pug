- var pages = [{title: 'home', path: '/'},{title: 'animals', path: '/animals'},{title: 'cats', path: '/cats'},{title: 'banksy', path: '/banksy'}]

doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Gallery
		link(rel='stylesheet', href='/styles/style.css')
	body
		header
			nav
				each page of pages
					a(href= page.path class='nav-link')= page.title
		block content